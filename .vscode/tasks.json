{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve Gramps Web Frontend",
      "type": "shell",
      "command": "npm run start",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Build Gramps Web Frontend",
      "type": "shell",
      "command": "npm run build",
      "isBackground": true,
      "group": {
        "kind": "build"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Serve Backend (Port 4042)",
      "type": "shell",
      "command": "DATABASE_URL=\"file:./dev.db\" JWT_SECRET=dev_secret PORT=4042 npm start",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
